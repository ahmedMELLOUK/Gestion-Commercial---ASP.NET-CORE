@model WatchioOnlineShop.Models.article;

@{
    ViewData["Title"] = "Supprimmer";
}
<br />
<h2 class="text-info">Supprimmer Article</h2>
<form asp-action="Supprimmer" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id">  <!-- L'ID de l'element a supprimmer -->

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="name"></label>
            </div>
            <div class="col-5">
                <input asp-for="name" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="prix"></label>
            </div>
            <div class="col-5">
                <input asp-for="prix" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="prix" class="text-danger"></span>
        </div>
 
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="quantite"></label>
            </div>
            <div class="col-5">
                <input asp-for="quantite" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="quantite" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="categorie"></label>
            </div>
            <div class="col-5">
                <select asp-for="id_categorie" readonly="readonly" asp-items="ViewBag.id_categorie" class="form-control"></select>
            </div>
            <span asp-validation-for="id_categorie" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="disponible"></label>
            </div>
            <div class="col-5">
                <input asp-for="disponible" class="" readonly="readonly" type="checkbox" />
            </div>
            <span asp-validation-for="disponible" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Supprimmer Produit" />
            <a asp-action="Index" class="btn btn-success">Retourner Aux Produit</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!--Appeler le script qui valide les attributs de la table generee par asp.net-->
}


