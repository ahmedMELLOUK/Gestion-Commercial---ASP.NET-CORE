@model WatchioOnlineShop.Models.categorie;

@{
    ViewData["Title"] = "Modifier";
}
<br />
<h2 class="text-info">Modifier Categorie</h2>
<form asp-action="Modifier" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" >

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="name"></label>
            </div>
            <div class="col-5">
                <input asp-for="name" class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Modifier" />
            <a asp-action="Index" class="btn btn-primary">Retourner A la Page</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!--Appeler le script qui valide les attributs de la table-->
}
