@using WatchioOnlineShop.Models;
@model List<article>

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="main-title" style="text-align: center; color: #0e0561; font-family:cursive">Bienvenue à YouShop</h1>
<hr>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <figure class="card card-product">
                <div class="img-wrap">
                    <img src="~/@item.image" width="100%" height="100%">
                </div>
                <figcaption class="info-wrap">
                    <h4 class="title text-dots">@item.name</h4>
                    <div class="action-wrap text-center">
                        <div class="price-wrap h5">
                            Prix: <span class="price-new">@item.prix DH</span>
                        </div>
                        <a asp-action="acheter" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm center">
                            Ajouter au panier<i class="fas fa-cart-plus"></i>
                        </a>
                    </div>
                </figcaption>
            </figure>
        </div>
    }

</div>



<style>
    body {
        background-color: #ebf8fc;
    }

     .card-product:after {
                content: "";
                display: table;
                clear: both;
                visibility: hidden;
            }

            .card-product .price-new, .card-product .price {
                margin-right: 5px;
            }

            .card-product .price-old {
                color: #999;
            }
    .price-wrap{
        text-align:center;
    }

    .card-product .img-wrap {
        border-radius: 3px 3px 0 0;
        overflow: hidden;
        position: relative;
        height: 220px;
        text-align: center;
    }

                .card-product .img-wrap img {
                    max-height: 100%;
                    max-width: 100%;
                    object-fit: cover;
                }


            .card-product .info-wrap {
                overflow: hidden;
                padding: 15px;
                border-top: 1px solid #eee;
            }

            .card-product .action-wrap {
                padding-top: 4px;
                margin-top: 4px;
            }

            .card-product .bottom-wrap {
                padding: 15px;
                border-top: 1px solid #eee;
            }

            .card-product .title {
                margin-top: 0;
            }
    .price-new {
        color: #063a8f;
    }
    .text-dots {
        color: #05156b;
        text-align: center;
        font-family: cursive;
    }

   
</style>




